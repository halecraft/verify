{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },

  "files": {
    "includes": ["**", "!!**/dist"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "bracketSpacing": true,
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "arrowParentheses": "asNeeded",
      "indentStyle": "space"
    }
  },

  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
